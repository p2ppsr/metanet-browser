{
  "name": "metanet-mobile",
  "description": "Metanet Explorer - Enabling identity, micropayments, and use of BSV websites on mobile devices",
  "author": "Peer-to-peer Privacy Systems Research, LLC",
  "main": "index.js",
  "version": "0.4.1",
  "license": "Open BSV",
  "scripts": {
    "apk-android": "eas build --profile production-apk --platform android --local --verbose-logs --build-logger-level trace",
    "aab-android": "cd android && ./gradlew bundleRelease",
    "ipa-ios": "eas build --profile production --platform ios --local --verbose-logs --build-logger-level trace",
    "start": "expo start --dev-client",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo start --dev-client --android",
    "ios": "expo start --dev-client --ios",
    "web": "expo start --web",
    "lint": "expo lint",
    "lint:fix": "expo lint --fix",
    "configure": "./configure.sh",
    "prebuild": "expo prebuild && USE_FIREBASE=$(jq -r .expo.extra.useFirebase app.json) ./scripts/android-firebase-patch.sh",
    "eas-build-post-install": "USE_FIREBASE=true ./scripts/android-firebase-patch.sh",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "bump:patch": "node scripts/bump-version.js patch",
    "bump:minor": "node scripts/bump-version.js minor",
    "fix": "npm run format && npm run lint:fix",
    "clean": "rm -rf yarn.lock && rm -rf .expo && rm -rf .expo-shared && rm -rf .vscode && rm -rf .idea && rm -rf ios/Pods && rm -rf android/.gradle && rm -rf android/app/build && rm -rf ./ios"
  },
  "dependencies": {
